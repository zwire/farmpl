{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "files": {
    "includes": [
      "app/**",
      "lib/**",
      "tests/**",
      "package.json",
      "biome.json",
      "tsconfig.json",
      "vitest.config.ts",
      "postcss.config.mjs"
    ]
  }
}
